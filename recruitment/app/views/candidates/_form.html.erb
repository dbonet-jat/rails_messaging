<%= form_with(model: candidate) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :fullname %>
    <%= form.text_field :fullname, class: "border" %>
  </div>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, class: "border" %>
  </div>

  <div class="form-group">
    <%= form.label :hired %>
    <%= form.check_box :hired, class: "border" %>
  </div>

  <div class="form-group flex justify-between">
    <%= form.button class: "btn btn-default" %>

    <% if form.object.persisted? %>
      <%= link_to 'Delete', form.object, class: "btn btn-danger outline", method: :delete, data: { confirm: "Are you sure?" } %>
    <% end %>
  </div>
<% end %>
